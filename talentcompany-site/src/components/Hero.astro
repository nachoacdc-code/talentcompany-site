---
export type Props = {
	kicker?: string;
	title: string;
	subtitle?: string;
	primaryCta?: { label: string; href: string };
	secondaryCta?: { label: string; href: string };
};

const {
	kicker = 'TalentCompany',
	title,
	subtitle,
	primaryCta = { label: 'View services', href: '/#services' },
	secondaryCta = { label: 'Contact', href: 'mailto:hello@talentcompany.com' },
} = Astro.props;
---

<section class="relative overflow-hidden">
	<div class="mx-auto max-w-6xl px-6 py-16 sm:py-20">
		<div class="grid items-center gap-10 lg:grid-cols-2">
			<div>
				<p class="text-sm font-semibold tracking-wide text-sky-300">{kicker}</p>
				<h1 class="mt-4 text-4xl font-semibold tracking-tight text-white sm:text-5xl">
					{title}
				</h1>
				{subtitle ? (
					<p class="mt-4 max-w-prose text-base leading-relaxed text-slate-300 sm:text-lg">
						{subtitle}
					</p>
				) : null}

				<div class="mt-8 flex flex-wrap gap-3">
					<a
						class="inline-flex items-center justify-center rounded-xl bg-sky-500 px-4 py-2 text-sm font-semibold text-slate-950 shadow-sm transition hover:bg-sky-400 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300 focus-visible:ring-offset-2 focus-visible:ring-offset-slate-950"
						href={primaryCta.href}
					>
						{primaryCta.label}
					</a>
					<a
						class="inline-flex items-center justify-center rounded-xl border border-slate-800 bg-slate-900/60 px-4 py-2 text-sm font-semibold text-slate-100 transition hover:bg-slate-900 focus:outline-none focus-visible:ring-2 focus-visible:ring-slate-400 focus-visible:ring-offset-2 focus-visible:ring-offset-slate-950"
						href={secondaryCta.href}
					>
						{secondaryCta.label}
					</a>
				</div>
			</div>

			<div class="relative">
				<div class="rounded-2xl border border-slate-800 bg-gradient-to-br from-slate-900/60 to-slate-950 p-6 shadow-sm">
					<div class="grid gap-4 sm:grid-cols-2">
						<div class="rounded-xl border border-slate-800 bg-slate-900/40 p-4">
							<p class="text-xs font-semibold uppercase tracking-wide text-slate-400">Delivery</p>
							<p class="mt-2 text-sm text-slate-200">Fast, iterative, and measurable.</p>
						</div>
						<div class="rounded-xl border border-slate-800 bg-slate-900/40 p-4">
							<p class="text-xs font-semibold uppercase tracking-wide text-slate-400">Quality</p>
							<p class="mt-2 text-sm text-slate-200">Design-led, performance minded.</p>
						</div>
						<div class="rounded-xl border border-slate-800 bg-slate-900/40 p-4">
							<p class="text-xs font-semibold uppercase tracking-wide text-slate-400">Partners</p>
							<p class="mt-2 text-sm text-slate-200">We collaborate like an in-house team.</p>
						</div>
						<div class="rounded-xl border border-slate-800 bg-slate-900/40 p-4">
							<p class="text-xs font-semibold uppercase tracking-wide text-slate-400">Outcomes</p>
							<p class="mt-2 text-sm text-slate-200">Clear scope, clear milestones.</p>
						</div>
					</div>
				</div>
				<div class="pointer-events-none absolute -right-20 -top-20 h-64 w-64 rounded-full bg-sky-500/10 blur-3xl" />
				<div class="pointer-events-none absolute -bottom-24 -left-24 h-72 w-72 rounded-full bg-indigo-500/10 blur-3xl" />
			</div>
		</div>
	</div>
</section>

