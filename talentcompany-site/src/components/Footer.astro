---
export type Props = {
	companyName?: string;
	links?: { label: string; href: string }[];
};

const {
	companyName = 'TalentCompany',
	links = [
		{ label: 'Home', href: '/' },
		{ label: 'AEC Talent', href: '/solutions/aec-talent/' },
		{ label: 'Creative & Design', href: '/solutions/creatives-design/' },
		{ label: 'Marketing Talent', href: '/solutions/marketing-talent/' },
		{ label: 'Roles', href: '/roles/' },
		{ label: 'How It Works', href: '/how-it-works/' },
	],
} = Astro.props;

const year = new Date().getFullYear();
---

<footer class="border-t border-slate-800/80">
	<div class="mx-auto flex max-w-6xl flex-col gap-6 px-6 py-10 sm:flex-row sm:items-center sm:justify-between">
		<p class="text-sm text-slate-400">Â© {year} {companyName}. All rights reserved.</p>
		<nav class="flex flex-wrap gap-x-6 gap-y-2 text-sm">
			{links.map((l) => (
				<a class="text-slate-300 transition hover:text-white" href={l.href}>
					{l.label}
				</a>
			))}
		</nav>
	</div>
</footer>

