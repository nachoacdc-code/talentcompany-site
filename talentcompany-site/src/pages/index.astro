---
import Layout from '../layouts/Layout.astro';
import MetaHead from '../components/MetaHead.astro';
import HeroA from '../components/HeroA.astro';
import HeroB from '../components/HeroB.astro';
import ContactForm from '../components/ContactForm.astro';
import CalendlyEmbed from '../components/CalendlyEmbed.astro';
import Footer from '../components/Footer.astro';

const meta = {
	title: 'Remote Design & AEC Talent | Flexible Teams & Staff Augmentation',
	description:
		'Hire pre-vetted remote designers and AEC professionals through flexible full-time, part-time, or managed team engagements. Scale your capacity without hiring risk.',
};

const baseUrl = Astro.site ?? 'https://talentcompany-site.vercel.app';
const canonical = new URL('/', baseUrl).toString();

const orgJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'Organization',
	name: 'TalentCompany',
	url: baseUrl,
	sameAs: [],
};

---

<Layout>
	<MetaHead
		slot="head"
		title={meta.title}
		description={meta.description}
		canonical={canonical}
		jsonLd={orgJsonLd}
	/>

	{/* Hero A/B (client-side selection; see README) */}
	<div id="hero-variant-a" data-hero-variant="A">
		<HeroA />
	</div>
	<div id="hero-variant-b" data-hero-variant="B" class="hidden">
		<HeroB />
	</div>
	<script is:inline>
		{`(() => {
  const param = new URLSearchParams(window.location.search).get('hero');
  const stored = window.localStorage.getItem('tc_hero_variant');
  const variant = (param === 'A' || param === 'B')
    ? param
    : (stored === 'A' || stored === 'B')
      ? stored
      : (Math.random() < 0.5 ? 'A' : 'B');

  window.localStorage.setItem('tc_hero_variant', variant);

  const a = document.getElementById('hero-variant-a');
  const b = document.getElementById('hero-variant-b');
  if (a && b) {
    a.classList.toggle('hidden', variant !== 'A');
    b.classList.toggle('hidden', variant !== 'B');
  }

  // Optional analytics hook (works if you later add GA/Segment/etc.)
  window.dataLayer = window.dataLayer || [];
  window.dataLayer.push({ event: 'hero_variant', hero_variant: variant });

  const active = variant === 'A' ? a : b;
  const primaryLink = active?.querySelector('a[href*=\"#contact\"], a[href^=\"mailto:\"]');
  primaryLink?.addEventListener('click', () => {
    window.dataLayer.push({ event: 'hero_primary_click', hero_variant: variant });
  });
})();`}
	</script>

	<main class="mx-auto max-w-6xl px-6">
		<section class="py-12 sm:py-14">
			<div class="rounded-2xl border border-slate-800 bg-slate-900/40 px-6 py-6 sm:px-8">
				<p class="text-center text-sm font-medium text-slate-300">
					Senior-level contractors â€¢ US time zone overlap â€¢ Flexible engagements
				</p>
			</div>
		</section>

		<section class="pb-10 sm:pb-14">
			<h2 class="text-2xl font-semibold tracking-tight text-white sm:text-3xl">Why TalentCompany</h2>
			<ul class="mt-6 grid gap-4 md:grid-cols-3">
				<li class="rounded-2xl border border-slate-800 bg-slate-900/40 p-6">
					<p class="text-base font-semibold text-slate-100">Pre-vetted, production-ready</p>
					<p class="mt-2 text-sm leading-relaxed text-slate-300">
						Experienced specialists who can plug into your tools and process quickly.
					</p>
				</li>
				<li class="rounded-2xl border border-slate-800 bg-slate-900/40 p-6">
					<p class="text-base font-semibold text-slate-100">Flexible capacity</p>
					<p class="mt-2 text-sm leading-relaxed text-slate-300">
						Full-time, part-time, or managed teamsâ€”scale up or down without hiring risk.
					</p>
				</li>
				<li class="rounded-2xl border border-slate-800 bg-slate-900/40 p-6">
					<p class="text-base font-semibold text-slate-100">Fast matching</p>
					<p class="mt-2 text-sm leading-relaxed text-slate-300">
						Get the right skill set for the right engagement typeâ€”without weeks of sourcing.
					</p>
				</li>
			</ul>
		</section>

		<section id="services" class="py-10 sm:py-14">
			<div class="flex flex-col gap-2">
				<h2 class="text-2xl font-semibold tracking-tight text-white sm:text-3xl">What we do</h2>
				<p class="max-w-prose text-sm leading-relaxed text-slate-300 sm:text-base">
					Choose staff augmentation for dedicated talent, or managed teams for end-to-end delivery.
				</p>
			</div>

			<div class="mt-8 grid gap-4 lg:grid-cols-2">
				<article class="rounded-2xl border border-slate-800 bg-slate-900/40 p-6">
					<h3 class="text-base font-semibold text-slate-100">Staff Augmentation</h3>
					<p class="mt-3 text-sm leading-relaxed text-slate-300">
						Dedicated talent, fully integrated into your team. Full-time or part-time professionals you manage
						directly â€” fast onboarding, production-ready.
					</p>
					<div class="mt-6 flex flex-wrap gap-3">
						<a
							class="inline-flex items-center justify-center rounded-xl bg-sky-500 px-4 py-2 text-sm font-semibold text-slate-950 shadow-sm transition hover:bg-sky-400 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300 focus-visible:ring-offset-2 focus-visible:ring-offset-slate-950"
							href="/services/design/"
