---
import Layout from '../layouts/Layout.astro';
import MetaHead from '../components/MetaHead.astro';
import Hero from '../components/Hero.astro';
import FeatureGrid from '../components/FeatureGrid.astro';
import SubscriptionTable from '../components/SubscriptionTable.astro';
import Footer from '../components/Footer.astro';

const features = [
	{
		title: 'Design',
		description: 'Brand, UI, and web experiences that convert.',
		href: '/services/design',
	},
	{
		title: 'AEC',
		description: 'Architecture/engineering workflows and visualization.',
		href: '/services/aec',
	},
	{
		title: 'Marketing',
		description: 'Messaging, landing pages, and content systems.',
		href: '/services/marketing',
	},
	{
		title: 'Performance',
		description: 'Fast builds, accessibility, and best practices.',
	},
	{
		title: 'Delivery',
		description: 'Clear scope, weekly cadence, and tight feedback loops.',
	},
	{
		title: 'Growth',
		description: 'SEO foundations, analytics-ready, measurable results.',
	},
];

const plans = [
	{
		name: 'Starter',
		price: '$1,500',
		description: 'Ideal for one landing page or a quick refresh.',
		features: ['1 active request', '48–72h turnaround', 'Async updates'],
		cta: { label: 'Start Starter', href: 'mailto:hello@talentcompany.com?subject=Starter%20plan' },
	},
	{
		name: 'Team',
		price: '$3,500',
		description: 'Best for ongoing site, design, and growth work.',
		features: ['2 active requests', 'Priority queue', 'Monthly roadmap'],
		cta: { label: 'Choose Team', href: 'mailto:hello@talentcompany.com?subject=Team%20plan' },
		highlight: true,
	},
	{
		name: 'Scale',
		price: '$6,500',
		description: 'For higher throughput and multi-surface delivery.',
		features: ['3 active requests', 'Weekly sync', 'Advanced reporting'],
		cta: { label: 'Talk to us', href: 'mailto:hello@talentcompany.com?subject=Scale%20plan' },
	},
];

---

<Layout>
	<MetaHead
		slot="head"
		title="TalentCompany — Services for teams that ship"
		description="Minimal Astro + Tailwind starter for TalentCompany with service pages and a subscription table."
		canonical={new URL(Astro.url.pathname, Astro.site ?? 'https://example.com').toString()}
	/>

	<Hero
		kicker="TalentCompany"
		title="Design-led delivery for modern teams"
		subtitle="A minimal, fast website starter built with Astro and Tailwind. Swap this content for your real offer and ship."
		primaryCta={{ label: 'Explore services', href: '/#services' }}
		secondaryCta={{ label: 'Email us', href: 'mailto:hello@talentcompany.com' }}
	/>

	<FeatureGrid id="services" heading="Services" subheading="Pick a lane, or mix and match." features={features} />

	<SubscriptionTable plans={plans} />

	<Footer />
</Layout>
