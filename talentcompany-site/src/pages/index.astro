---
import Layout from '../layouts/Layout.astro';
import MetaHead from '../components/MetaHead.astro';
import Hero from '../components/Hero.astro';
import Footer from '../components/Footer.astro';

const meta = {
	title: 'Remote Design & AEC Talent | Flexible Teams & Staff Augmentation',
	description:
		'Hire pre-vetted remote designers and AEC professionals through flexible full-time, part-time, or managed team engagements. Scale your capacity without hiring risk.',
};

const baseUrl = Astro.site ?? 'https://example.com';
const canonical = new URL('/', baseUrl).toString();

const orgJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'Organization',
	name: 'TalentCompany',
	url: baseUrl,
	sameAs: [],
};

---

<Layout>
	<MetaHead
		slot="head"
		title={meta.title}
		description={meta.description}
		canonical={canonical}
		jsonLd={orgJsonLd}
	/>

	<Hero
		kicker="TalentCompany"
		title="Flexible Remote Talent for Design & AEC Teams"
		subtitle="Pre-vetted designers and AEC professionals, ready to plug into your workflow — full-time, part-time, or managed teams."
		primaryCta={{ label: 'Book a call', href: '/#contact' }}
		secondaryCta={{ label: 'See how it works', href: '/#how-it-works' }}
	/>

	<main class="mx-auto max-w-6xl px-6">
		<section class="py-12 sm:py-14">
			<div class="rounded-2xl border border-slate-800 bg-slate-900/40 px-6 py-6 sm:px-8">
				<p class="text-center text-sm font-medium text-slate-300">
					Senior-level contractors • US time zone overlap • Flexible engagements
				</p>
			</div>
		</section>

		<section class="pb-10 sm:pb-14">
			<h2 class="text-2xl font-semibold tracking-tight text-white sm:text-3xl">Why TalentCompany</h2>
			<ul class="mt-6 grid gap-4 md:grid-cols-3">
				<li class="rounded-2xl border border-slate-800 bg-slate-900/40 p-6">
					<p class="text-base font-semibold text-slate-100">Pre-vetted, production-ready</p>
					<p class="mt-2 text-sm leading-relaxed text-slate-300">
						Experienced specialists who can plug into your tools and process quickly.
					</p>
				</li>
				<li class="rounded-2xl border border-slate-800 bg-slate-900/40 p-6">
					<p class="text-base font-semibold text-slate-100">Flexible capacity</p>
					<p class="mt-2 text-sm leading-relaxed text-slate-300">
						Full-time, part-time, or managed teams—scale up or down without hiring risk.
					</p>
				</li>
				<li class="rounded-2xl border border-slate-800 bg-slate-900/40 p-6">
					<p class="text-base font-semibold text-slate-100">Fast matching</p>
					<p class="mt-2 text-sm leading-relaxed text-slate-300">
						Get the right skill set for the right engagement type—without weeks of sourcing.
					</p>
				</li>
			</ul>
		</section>

		<section class="py-10 sm:py-14">
			<div class="flex flex-col gap-2">
				<h2 class="text-2xl font-semibold tracking-tight text-white sm:text-3xl">What we do</h2>
				<p class="max-w-prose text-sm leading-relaxed text-slate-300 sm:text-base">
					Choose staff augmentation for dedicated talent, or managed teams for end-to-end delivery.
				</p>
			</div>

			<div class="mt-8 grid gap-4 lg:grid-cols-2">
				<article class="rounded-2xl border border-slate-800 bg-slate-900/40 p-6">
					<h3 class="text-base font-semibold text-slate-100">Staff Augmentation</h3>
					<p class="mt-3 text-sm leading-relaxed text-slate-300">
						Dedicated talent, fully integrated into your team. Full-time or part-time professionals you manage
						directly — fast onboarding, production-ready.
					</p>
					<div class="mt-6 flex flex-wrap gap-3">
						<a
							class="inline-flex items-center justify-center rounded-xl bg-sky-500 px-4 py-2 text-sm font-semibold text-slate-950 shadow-sm transition hover:bg-sky-400 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300 focus-visible:ring-offset-2 focus-visible:ring-offset-slate-950"
							href="/services/design"
						>
							Design
						</a>
						<a
							class="inline-flex items-center justify-center rounded-xl border border-slate-800 bg-slate-900/60 px-4 py-2 text-sm font-semibold text-slate-100 transition hover:bg-slate-900 focus:outline-none focus-visible:ring-2 focus-visible:ring-slate-400 focus-visible:ring-offset-2 focus-visible:ring-offset-slate-950"
							href="/services/aec"
						>
							AEC
						</a>
					</div>
				</article>

				<article class="rounded-2xl border border-slate-800 bg-slate-900/40 p-6">
					<h3 class="text-base font-semibold text-slate-100">Managed Teams</h3>
					<p class="mt-3 text-sm leading-relaxed text-slate-300">
						PM-led teams delivered as predictable monthly capacity. A streamlined process, clear ownership, and
						studio-grade output.
					</p>
					<div class="mt-6 flex flex-wrap gap-3">
						<a
							class="inline-flex items-center justify-center rounded-xl bg-sky-500 px-4 py-2 text-sm font-semibold text-slate-950 shadow-sm transition hover:bg-sky-400 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300 focus-visible:ring-offset-2 focus-visible:ring-offset-slate-950"
							href="/services/marketing"
						>
							Marketing
						</a>
						<a
							class="inline-flex items-center justify-center rounded-xl border border-slate-800 bg-slate-900/60 px-4 py-2 text-sm font-semibold text-slate-100 transition hover:bg-slate-900 focus:outline-none focus-visible:ring-2 focus-visible:ring-slate-400 focus-visible:ring-offset-2 focus-visible:ring-offset-slate-950"
							href="/services/design"
						>
							Design delivery
						</a>
					</div>
				</article>
			</div>
		</section>

		<section id="how-it-works" class="py-10 sm:py-14">
			<div class="flex flex-col gap-2">
				<h2 class="text-2xl font-semibold tracking-tight text-white sm:text-3xl">How it works</h2>
				<p class="max-w-prose text-sm leading-relaxed text-slate-300 sm:text-base">
					A simple process designed to get you productive quickly.
				</p>
			</div>

			<ol class="mt-8 grid gap-4 lg:grid-cols-3">
				<li class="rounded-2xl border border-slate-800 bg-slate-900/40 p-6">
					<p class="text-xs font-semibold uppercase tracking-wide text-sky-300">Step 1</p>
					<p class="mt-2 text-base font-semibold text-slate-100">Tell us your needs</p>
					<p class="mt-2 text-sm leading-relaxed text-slate-300">
						Skills, availability, and engagement type—so we can match accurately.
					</p>
				</li>
				<li class="rounded-2xl border border-slate-800 bg-slate-900/40 p-6">
					<p class="text-xs font-semibold uppercase tracking-wide text-sky-300">Step 2</p>
					<p class="mt-2 text-base font-semibold text-slate-100">Get matched fast</p>
					<p class="mt-2 text-sm leading-relaxed text-slate-300">
						We introduce vetted talent or a managed team aligned to your workflow.
					</p>
				</li>
				<li class="rounded-2xl border border-slate-800 bg-slate-900/40 p-6">
					<p class="text-xs font-semibold uppercase tracking-wide text-sky-300">Step 3</p>
					<p class="mt-2 text-base font-semibold text-slate-100">Start working</p>
					<p class="mt-2 text-sm leading-relaxed text-slate-300">
						Collaborate immediately, then scale up or down as priorities change.
					</p>
				</li>
			</ol>
		</section>

		<section class="py-10 sm:py-14">
			<div class="rounded-2xl border border-slate-800 bg-gradient-to-br from-slate-900/60 to-slate-950 p-6 sm:p-8">
				<div class="flex flex-col items-start justify-between gap-6 md:flex-row md:items-center">
					<div>
						<h2 class="text-2xl font-semibold tracking-tight text-white sm:text-3xl">Explore services</h2>
						<p class="mt-2 max-w-prose text-sm leading-relaxed text-slate-300 sm:text-base">
							Start with a service page, then reach out to scope a team.
						</p>
					</div>
					<div class="flex flex-wrap gap-3">
						<a
							class="inline-flex items-center justify-center rounded-xl bg-sky-500 px-4 py-2 text-sm font-semibold text-slate-950 shadow-sm transition hover:bg-sky-400 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300 focus-visible:ring-offset-2 focus-visible:ring-offset-slate-950"
							href="/services/design"
						>
							Design
						</a>
						<a
							class="inline-flex items-center justify-center rounded-xl bg-sky-500 px-4 py-2 text-sm font-semibold text-slate-950 shadow-sm transition hover:bg-sky-400 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300 focus-visible:ring-offset-2 focus-visible:ring-offset-slate-950"
							href="/services/aec"
						>
							AEC
						</a>
						<a
							class="inline-flex items-center justify-center rounded-xl border border-slate-800 bg-slate-900/60 px-4 py-2 text-sm font-semibold text-slate-100 transition hover:bg-slate-900 focus:outline-none focus-visible:ring-2 focus-visible:ring-slate-400 focus-visible:ring-offset-2 focus-visible:ring-offset-slate-950"
							href="/services/marketing"
						>
							Marketing
						</a>
					</div>
				</div>
			</div>
		</section>

		<section id="contact" class="pb-16 pt-10 sm:pb-20 sm:pt-14">
			<div class="rounded-2xl border border-slate-800 bg-slate-900/40 p-6 sm:p-8">
				<div class="flex flex-col items-start justify-between gap-6 md:flex-row md:items-center">
					<div>
						<h2 class="text-xl font-semibold text-white sm:text-2xl">Ready to scale capacity?</h2>
						<p class="mt-2 max-w-prose text-sm leading-relaxed text-slate-300">
							Share your needs and we’ll propose the best engagement type.
						</p>
					</div>
					<div class="flex flex-wrap gap-3">
						<a
							class="inline-flex items-center justify-center rounded-xl bg-sky-500 px-4 py-2 text-sm font-semibold text-slate-950 shadow-sm transition hover:bg-sky-400 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300 focus-visible:ring-offset-2 focus-visible:ring-offset-slate-950"
							href="mailto:hello@talentcompany.com?subject=TalentCompany%20intro"
						>
							Book a call
						</a>
						<a
							class="inline-flex items-center justify-center rounded-xl border border-slate-800 bg-slate-900/60 px-4 py-2 text-sm font-semibold text-slate-100 transition hover:bg-slate-900 focus:outline-none focus-visible:ring-2 focus-visible:ring-slate-400 focus-visible:ring-offset-2 focus-visible:ring-offset-slate-950"
							href="/#how-it-works"
						>
							Review steps
						</a>
					</div>
				</div>
			</div>
		</section>
	</main>

	<Footer />
</Layout>
