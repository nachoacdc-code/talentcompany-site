---
import Layout from '../../../layouts/Layout.astro';
import MetaHead from '../../../components/MetaHead.astro';
import ContactSection from '../../../components/ContactSection.astro';
import Footer from '../../../components/Footer.astro';

const brand = 'TalentCompany';

const meta = {
	title: `Remote Creative & Design Talent | ${brand}`,
	description:
		'Reliable remote creative and design talent for US teams. Dedicated designer seats or PM-led delivery with clear workflow and predictable output.',
};

const baseUrl = Astro.site ?? 'https://talentcompany-site.vercel.app';
const canonical = new URL('/solutions/creatives-design/', baseUrl).toString();

const outcomes = [
	{ title: 'Faster throughput', body: 'Consistent weekly output without hiring delays.' },
	{ title: 'Quality bar', body: 'Senior-level craft and clean handoffs.' },
	{ title: 'Flexible engagement', body: 'Month-to-month, scale up or down.' },
	{ title: 'Clear workflow', body: 'Simple intake, delivery, and iteration.' },
];

const faqs = [
	{
		q: 'Should we choose a dedicated seat or PM-led delivery?',
		a: 'Choose a dedicated seat when you want an embedded designer working directly with your team. Choose PM-led delivery when you want a managed workflow with predictable turnaround and less coordination overhead.',
	},
	{
		q: 'How fast can we start?',
		a: 'We can typically present vetted options quickly. Once scope and access are confirmed, onboarding is designed to be fast so you can start shipping.',
	},
	{
		q: 'How do revisions and feedback work?',
		a: 'We align on your brand standards and feedback cadence, then run structured iterations and handoffs to keep work moving.',
	},
];

const serviceJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'Service',
	name: 'Remote Creative & Design Talent',
	description: meta.description,
	provider: {
		'@type': 'Organization',
		name: brand,
		url: baseUrl,
	},
};

const faqJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'FAQPage',
	mainEntity: faqs.map((f) => ({
		'@type': 'Question',
		name: f.q,
		acceptedAnswer: { '@type': 'Answer', text: f.a },
	})),
};
---

<Layout>
	<MetaHead slot="head" title={meta.title} description={meta.description} canonical={canonical} jsonLd={[serviceJsonLd, faqJsonLd]} />

	<main class="mx-auto max-w-6xl px-6 py-12 sm:py-14">
		{/* HERO */}
		<section class="relative overflow-hidden">
			<div class="grid items-center gap-10 lg:grid-cols-2">
				<div>
					<p class="text-sm font-semibold tracking-wide text-sky-300">Solutions</p>
					<h1 class="mt-4 text-4xl font-semibold tracking-tight text-white sm:text-5xl">
						Reliable Remote Creative &amp; Design Talent
					</h1>
					<p class="mt-4 max-w-prose text-base leading-relaxed text-slate-300 sm:text-lg">
						Dedicated designers or PM-led delivery for predictable output. Plug into your tools, brand standards, and
						cadence — and scale month-to-month as priorities change.
					</p>

					<div class="mt-8 flex flex-wrap gap-3">
						<a
							href="/#contact"
							class="inline-flex items-center justify-center rounded bg-sky-600 px-5 py-2.5 text-sm font-semibold text-white transition hover:bg-sky-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300 focus-visible:ring-offset-2 focus-visible:ring-offset-slate-950"
						>
							Book a 15-Min Call
						</a>
						<a
							href="/solutions/creatives-design/dedicated/"
							class="inline-flex items-center justify-center rounded-xl border border-slate-800 bg-slate-900/60 px-5 py-2.5 text-sm font-semibold text-slate-100 transition hover:bg-slate-900 focus:outline-none focus-visible:ring-2 focus-visible:ring-slate-400 focus-visible:ring-offset-2 focus-visible:ring-offset-slate-950"
						>
							View options
						</a>
					</div>
				</div>

				<div class="relative">
					<div class="rounded-2xl border border-slate-800 bg-gradient-to-br from-slate-900/60 to-slate-950 p-6 shadow-sm">
						<p class="text-xs font-semibold uppercase tracking-wide text-slate-400">Outcome snapshots</p>
						<div class="mt-4 grid gap-3 sm:grid-cols-2">
							{outcomes.map((o) => (
								<div class="rounded-xl border border-slate-800 bg-slate-900/40 p-4">
									<p class="text-sm font-semibold text-slate-100">{o.title}</p>
									<p class="mt-2 text-sm text-slate-300">{o.body}</p>
								</div>
							))}
						</div>
					</div>
					<div class="pointer-events-none absolute -right-20 -top-20 h-64 w-64 rounded-full bg-sky-500/10 blur-3xl" />
					<div class="pointer-events-none absolute -bottom-24 -left-24 h-72 w-72 rounded-full bg-indigo-500/10 blur-3xl" />
				</div>
			</div>
		</section>

		{/* OPTIONS */}
		<section class="mt-12" aria-labelledby="options-creative">
			<h2 id="options-creative" class="text-2xl font-semibold tracking-tight text-white sm:text-3xl">
				Choose your engagement
			</h2>
			<p class="mt-3 max-w-prose text-sm leading-relaxed text-slate-300 sm:text-base">
				Start with a dedicated designer seat, or choose PM-led delivery for end-to-end execution.
			</p>

			<div class="mt-6 grid gap-4 md:grid-cols-2">
				<a
					href="/solutions/creatives-design/dedicated/"
					class="rounded-2xl border border-slate-800 bg-slate-900/40 p-6 transition hover:bg-slate-900"
				>
					<p class="text-sm font-semibold text-slate-100">Dedicated</p>
					<p class="mt-2 text-sm leading-relaxed text-slate-300">
						A dedicated remote designer embedded in your team for consistent weekly output.
					</p>
					<p class="mt-4 text-sm font-semibold text-sky-300">Explore dedicated →</p>
				</a>
				<a
					href="/solutions/creatives-design/pm-led/"
					class="rounded-2xl border border-slate-800 bg-slate-900/40 p-6 transition hover:bg-slate-900"
				>
					<p class="text-sm font-semibold text-slate-100">PM-led</p>
					<p class="mt-2 text-sm leading-relaxed text-slate-300">
						A PM-led design team with a clear intake process and predictable turnaround.
					</p>
					<p class="mt-4 text-sm font-semibold text-sky-300">Explore PM-led →</p>
				</a>
			</div>
		</section>

		{/* OUTCOME GRID */}
		<section class="mt-12" aria-labelledby="outcomes-creative">
			<h2 id="outcomes-creative" class="text-2xl font-semibold tracking-tight text-white sm:text-3xl">
				What you can expect
			</h2>
			<div class="mt-6 grid gap-4 md:grid-cols-2">
				<div class="rounded-2xl border border-slate-800 bg-slate-900/40 p-6">
					<h3 class="text-base font-semibold text-slate-100">Consistent delivery</h3>
					<p class="mt-3 text-sm leading-relaxed text-slate-300">
						Weekly output with clear priorities, fewer stalls, and reliable handoffs.
					</p>
				</div>
				<div class="rounded-2xl border border-slate-800 bg-slate-900/40 p-6">
					<h3 class="text-base font-semibold text-slate-100">Brand-aligned quality</h3>
					<p class="mt-3 text-sm leading-relaxed text-slate-300">
						Design that fits your standards, systems, and stakeholder expectations.
					</p>
				</div>
				<div class="rounded-2xl border border-slate-800 bg-slate-900/40 p-6">
					<h3 class="text-base font-semibold text-slate-100">Speed without chaos</h3>
					<p class="mt-3 text-sm leading-relaxed text-slate-300">
						Fast iteration and structured feedback loops for fewer revision cycles.
					</p>
				</div>
				<div class="rounded-2xl border border-slate-800 bg-slate-900/40 p-6">
					<h3 class="text-base font-semibold text-slate-100">Scalable capacity</h3>
					<p class="mt-3 text-sm leading-relaxed text-slate-300">
						Add designers or shift support month-to-month as your workload changes.
					</p>
				</div>
			</div>
		</section>

		{/* PROOF */}
		<section class="mt-12" aria-labelledby="proof-creative">
			<h2 id="proof-creative" class="text-2xl font-semibold tracking-tight text-white sm:text-3xl">Proof</h2>
			<p class="mt-3 max-w-prose text-sm leading-relaxed text-slate-300 sm:text-base">
				{/* TODO: Replace with testimonials carousel. */}
				Testimonials placeholder (to be filled).
			</p>

			<div class="mt-6 grid gap-4 md:grid-cols-3">
				{[1, 2, 3].map((i) => (
					<figure class="rounded-2xl border border-slate-800 bg-slate-900/40 p-6">
						<blockquote class="text-sm leading-relaxed text-slate-200">“TODO testimonial {i}.”</blockquote>
						<figcaption class="mt-3 text-xs text-slate-400">— TODO, anonymized</figcaption>
					</figure>
				))}
			</div>
		</section>

		{/* FAQ */}
		<section class="mt-12" aria-labelledby="faq-creative">
			<h2 id="faq-creative" class="text-2xl font-semibold tracking-tight text-white sm:text-3xl">FAQ</h2>
			<div class="mt-6 grid gap-3">
				{faqs.map((item) => (
					<details class="rounded-2xl border border-slate-800 bg-slate-900/40 p-5">
						<summary class="cursor-pointer list-none text-sm font-semibold text-slate-100">{item.q}</summary>
						<p class="mt-3 text-sm leading-relaxed text-slate-300">{item.a}</p>
					</details>
				))}
			</div>
		</section>

		{/* FINAL CTA */}
		<section class="mt-14 rounded-2xl border border-slate-800 bg-gradient-to-br from-slate-900/60 to-slate-950 p-6 sm:p-8">
			<div class="flex flex-col items-start justify-between gap-6 md:flex-row md:items-center">
				<div>
					<h2 class="text-2xl font-semibold tracking-tight text-white sm:text-3xl">Ready to scale design output?</h2>
					<p class="mt-2 max-w-prose text-sm leading-relaxed text-slate-300 sm:text-base">
						Book a call to discuss your priorities — we’ll suggest the best-fit model and match talent fast.
					</p>
				</div>
				<div class="flex flex-wrap gap-3">
					<a
						href="/#contact"
						class="inline-flex items-center justify-center rounded bg-sky-600 px-5 py-2.5 text-sm font-semibold text-white transition hover:bg-sky-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300 focus-visible:ring-offset-2 focus-visible:ring-offset-slate-950"
					>
						Book a 15-Min Call
					</a>
					<a
						href="/solutions/creatives-design/dedicated/"
						class="inline-flex items-center justify-center rounded-xl border border-slate-800 bg-slate-900/60 px-5 py-2.5 text-sm font-semibold text-slate-100 transition hover:bg-slate-900 focus:outline-none focus-visible:ring-2 focus-visible:ring-slate-400 focus-visible:ring-offset-2 focus-visible:ring-offset-slate-950"
					>
						View dedicated seat
					</a>
				</div>
			</div>
		</section>
	</main>

	<div class="mx-auto max-w-6xl px-6">
		<ContactSection subject={`${brand} — new inquiry (creative & design solution)`} />
	</div>

	<Footer />
</Layout>

