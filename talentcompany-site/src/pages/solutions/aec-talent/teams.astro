---
import Layout from '../../../layouts/Layout.astro';
import MetaHead from '../../../components/MetaHead.astro';
import ContactSection from '../../../components/ContactSection.astro';
import Footer from '../../../components/Footer.astro';

const brand = 'TalentCompany';

const meta = {
	title: `Build Dedicated AEC Teams for Scaling | ${brand}`,
	description:
		'Scale AEC delivery with a dedicated pod: architectural designers, Revit modelers, drafting support, and optional coordination — flexible, fast onboarding, month-to-month.',
};

const baseUrl = Astro.site ?? 'https://talentcompany-site.vercel.app';
const canonical = new URL('/solutions/aec-talent/teams/', baseUrl).toString();

const faqs = [
	{
		q: 'What does a “pod” look like?',
		a: 'A pod is a small team with complementary skills (e.g., architectural designer + Revit modeler + drafting support) aligned to your standards and deliverables.',
	},
	{
		q: 'Can we start small and scale?',
		a: 'Yes — many teams start with one or two contributors, then add roles as workload increases or timelines tighten.',
	},
	{
		q: 'How do you keep quality consistent across a team?',
		a: 'We align on your templates/BEP, QA checkpoints, and revision process. The team works inside your workflow with clear handoffs and versioning.',
	},
	{
		q: 'Do you support month-to-month engagements?',
		a: 'Yes — pods are flexible and can scale up/down as priorities change. We also offer a free replacement guarantee.',
	},
];
---

<Layout>
	<MetaHead slot="head" title={meta.title} description={meta.description} canonical={canonical} />

	<main class="mx-auto max-w-6xl px-6 py-12 sm:py-14">
		{/* HERO */}
		<section class="relative overflow-hidden">
			<div class="grid items-center gap-10 lg:grid-cols-2">
				<div>
					<p class="text-sm font-semibold tracking-wide text-sky-300">AEC Talent</p>
					<h1 class="mt-4 text-4xl font-semibold tracking-tight text-white sm:text-5xl">
						Build Dedicated AEC Teams for Scaling
					</h1>
					<p class="mt-4 max-w-prose text-base leading-relaxed text-slate-300 sm:text-lg">
						Increase throughput with a dedicated production pod — aligned to your standards and deadlines. Add
						architectural designers, Revit modelers, drafting support, and optional coordination.
					</p>

					<div class="mt-8 flex flex-wrap gap-3">
						<a
							href="/#contact"
							class="inline-flex items-center justify-center rounded bg-sky-600 px-5 py-2.5 text-sm font-semibold text-white transition hover:bg-sky-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300 focus-visible:ring-offset-2 focus-visible:ring-offset-slate-950"
						>
							Book a 15-Min Call
						</a>
						<a
							href="/solutions/aec-talent/"
							class="inline-flex items-center justify-center rounded-xl border border-slate-800 bg-slate-900/60 px-5 py-2.5 text-sm font-semibold text-slate-100 transition hover:bg-slate-900 focus:outline-none focus-visible:ring-2 focus-visible:ring-slate-400 focus-visible:ring-offset-2 focus-visible:ring-offset-slate-950"
						>
							Back to AEC overview
						</a>
					</div>

					<p class="mt-4 text-xs leading-relaxed text-slate-400">
						Month-to-month flexibility. Scalable pods. QA checkpoints. Free replacement guarantee.
					</p>
				</div>

				<div class="relative">
					<div class="rounded-2xl border border-slate-800 bg-gradient-to-br from-slate-900/60 to-slate-950 p-6 shadow-sm">
						<p class="text-xs font-semibold uppercase tracking-wide text-slate-400">Best for</p>
						<ul class="mt-4 grid gap-3 sm:grid-cols-2">
							<li class="rounded-xl border border-slate-800 bg-slate-900/40 p-4">
								<p class="text-sm font-semibold text-slate-100">Peak workloads</p>
								<p class="mt-2 text-sm text-slate-300">Add capacity without delaying schedules.</p>
							</li>
							<li class="rounded-xl border border-slate-800 bg-slate-900/40 p-4">
								<p class="text-sm font-semibold text-slate-100">Multi-project support</p>
								<p class="mt-2 text-sm text-slate-300">Parallelize deliverables across projects.</p>
							</li>
							<li class="rounded-xl border border-slate-800 bg-slate-900/40 p-4">
								<p class="text-sm font-semibold text-slate-100">Documentation sprints</p>
								<p class="mt-2 text-sm text-slate-300">CD production and redline turnarounds.</p>
							</li>
							<li class="rounded-xl border border-slate-800 bg-slate-900/40 p-4">
								<p class="text-sm font-semibold text-slate-100">Standardized QA</p>
								<p class="mt-2 text-sm text-slate-300">Consistent outputs aligned to your templates.</p>
							</li>
						</ul>
					</div>
					<div class="pointer-events-none absolute -right-20 -top-20 h-64 w-64 rounded-full bg-sky-500/10 blur-3xl" />
					<div class="pointer-events-none absolute -bottom-24 -left-24 h-72 w-72 rounded-full bg-indigo-500/10 blur-3xl" />
				</div>
			</div>
		</section>

		{/* ROI TEASER */}
		<section class="mt-12 rounded-2xl border border-slate-800 bg-slate-900/40 p-6" aria-labelledby="roi-aec">
			<h2 id="roi-aec" class="text-xl font-semibold text-white">ROI teaser</h2>
			<p class="mt-3 text-sm leading-relaxed text-slate-300 sm:text-base">
				{/* TODO: Add savings calculator module. */}
				Placeholder: savings calculator teaser (to be filled).
			</p>
		</section>

		{/* TEAM EXAMPLES */}
		<section class="mt-12" aria-labelledby="team-examples-aec">
			<h2 id="team-examples-aec" class="text-2xl font-semibold tracking-tight text-white sm:text-3xl">
				Example team pods
			</h2>
			<div class="mt-6 grid gap-4 md:grid-cols-3">
				<article class="rounded-2xl border border-slate-800 bg-slate-900/40 p-6">
					<h3 class="text-base font-semibold text-slate-100">CD Production Pod</h3>
					<ul class="mt-3 grid gap-2 text-sm text-slate-300">
						<li>Architectural Designer</li>
						<li>Revit Modeler</li>
						<li>Drafting Support</li>
					</ul>
					<p class="mt-4 text-sm text-slate-300">Best for: documentation deadlines and redlines.</p>
				</article>
				<article class="rounded-2xl border border-slate-800 bg-slate-900/40 p-6">
					<h3 class="text-base font-semibold text-slate-100">BIM Support Pod</h3>
					<ul class="mt-3 grid gap-2 text-sm text-slate-300">
						<li>BIM Coordinator</li>
						<li>Revit Modeler</li>
						<li>QA / Standards Support</li>
					</ul>
					<p class="mt-4 text-sm text-slate-300">Best for: model management and coordination workflows.</p>
				</article>
				<article class="rounded-2xl border border-slate-800 bg-slate-900/40 p-6">
					<h3 class="text-base font-semibold text-slate-100">Visualization Pod</h3>
					<ul class="mt-3 grid gap-2 text-sm text-slate-300">
						<li>3D Modeler</li>
						<li>Renderer</li>
						<li>Design Support</li>
					</ul>
					<p class="mt-4 text-sm text-slate-300">Best for: concept visuals and client presentations.</p>
				</article>
			</div>
		</section>

		{/* PROCESS */}
		<section class="mt-12" aria-labelledby="process-aec-teams">
			<h2 id="process-aec-teams" class="text-2xl font-semibold tracking-tight text-white sm:text-3xl">
				Process
			</h2>
			<ol class="mt-6 grid gap-4 lg:grid-cols-4">
				{[
					{ title: 'Define scope', body: 'Deliverables, standards, roles, and overlap hours.' },
					{ title: 'Pod design', body: 'We propose the right mix of roles for your workflow.' },
					{ title: 'Start fast', body: 'Onboard with your templates/BEP and revision cadence.' },
					{ title: 'Scale', body: 'Add capacity or adjust roles month-to-month as needs change.' },
				].map((step, idx) => (
					<li class="rounded-2xl border border-slate-800 bg-slate-900/40 p-6">
						<p class="text-xs font-semibold uppercase tracking-wide text-sky-300">Step {idx + 1}</p>
						<p class="mt-2 text-sm font-semibold text-slate-100">{step.title}</p>
						<p class="mt-2 text-sm leading-relaxed text-slate-300">{step.body}</p>
					</li>
				))}
			</ol>
		</section>

		{/* PROOF */}
		<section class="mt-12" aria-labelledby="proof-aec-teams">
			<h2 id="proof-aec-teams" class="text-2xl font-semibold tracking-tight text-white sm:text-3xl">Proof</h2>
			<p class="mt-3 max-w-prose text-sm leading-relaxed text-slate-300 sm:text-base">
				{/* TODO: Replace with testimonials carousel. */}
				Testimonials placeholder (to be filled).
			</p>
			<div class="mt-6 grid gap-4 md:grid-cols-3">
				{[1, 2, 3].map((i) => (
					<figure class="rounded-2xl border border-slate-800 bg-slate-900/40 p-6">
						<blockquote class="text-sm leading-relaxed text-slate-200">“TODO testimonial {i}.”</blockquote>
						<figcaption class="mt-3 text-xs text-slate-400">— TODO, anonymized</figcaption>
					</figure>
				))}
			</div>
		</section>

		{/* FAQ */}
		<section class="mt-12" aria-labelledby="faq-aec-teams">
			<h2 id="faq-aec-teams" class="text-2xl font-semibold tracking-tight text-white sm:text-3xl">FAQ</h2>
			<div class="mt-6 grid gap-3">
				{faqs.map((item) => (
					<details class="rounded-2xl border border-slate-800 bg-slate-900/40 p-5">
						<summary class="cursor-pointer list-none text-sm font-semibold text-slate-100">{item.q}</summary>
						<p class="mt-3 text-sm leading-relaxed text-slate-300">{item.a}</p>
					</details>
				))}
			</div>
		</section>

		{/* FINAL CTA */}
		<section class="mt-14 rounded-2xl border border-slate-800 bg-gradient-to-br from-slate-900/60 to-slate-950 p-6 sm:p-8">
			<div class="flex flex-col items-start justify-between gap-6 md:flex-row md:items-center">
				<div>
					<h2 class="text-2xl font-semibold tracking-tight text-white sm:text-3xl">Ready to scale AEC delivery?</h2>
					<p class="mt-2 max-w-prose text-sm leading-relaxed text-slate-300 sm:text-base">
						Book a call to map a pod to your deliverables, standards, and timeline.
					</p>
				</div>
				<div class="flex flex-wrap gap-3">
					<a
						href="/#contact"
						class="inline-flex items-center justify-center rounded bg-sky-600 px-5 py-2.5 text-sm font-semibold text-white transition hover:bg-sky-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300 focus-visible:ring-offset-2 focus-visible:ring-offset-slate-950"
					>
						Book a 15-Min Call
					</a>
					<a
						href="/solutions/aec-talent/individuals/"
						class="inline-flex items-center justify-center rounded-xl border border-slate-800 bg-slate-900/60 px-5 py-2.5 text-sm font-semibold text-slate-100 transition hover:bg-slate-900 focus:outline-none focus-visible:ring-2 focus-visible:ring-slate-400 focus-visible:ring-offset-2 focus-visible:ring-offset-slate-950"
					>
						Prefer individuals?
					</a>
				</div>
			</div>
		</section>
	</main>

	<div class="mx-auto max-w-6xl px-6">
		<ContactSection subject={`${brand} — new inquiry (AEC teams)`} />
	</div>

	<Footer />
</Layout>

