---
import Layout from '../../../layouts/Layout.astro';
import MetaHead from '../../../components/MetaHead.astro';
import ContactSection from '../../../components/ContactSection.astro';
import Footer from '../../../components/Footer.astro';
import { BOOKING_URL, isExternalUrl } from '../../../lib/cta';

const brand = 'TalentCompany';

const meta = {
	title: `Hire Individual AEC Specialists — Fast and Flexible | ${brand}`,
	description:
		'Dedicated remote AEC specialists for US firms. Start in days with vetted Revit/BIM/drafting talent on flexible 20h or 40h weekly engagements.',
};

const baseUrl = Astro.site ?? 'https://talentcompany-site.vercel.app';
const canonical = new URL('/solutions/aec-talent/individuals/', baseUrl).toString();

const faqs = [
	{
		q: 'What’s the difference between 20h and 40h per week?',
		a: '20h/week is ideal for steady overflow support or a focused scope. 40h/week is best for owning deliverables and moving faster with fewer handoffs.',
	},
	{
		q: 'How do you match for our standards and workflows?',
		a: 'We align on your BEP/templates, deliverable standards, and revision cadence. Specialists work inside your process (redlines, markups, checklists).',
	},
	{
		q: 'How fast can we receive candidates?',
		a: 'We can typically present vetted options in 48 hours. Onboarding timing depends on access and scope, but is designed to be fast.',
	},
	{
		q: 'What if the fit is not right?',
		a: 'Engagements are month-to-month, and we offer a free replacement guarantee.',
	},
];

const bookingUrl = BOOKING_URL;
const bookingExternal = isExternalUrl(bookingUrl);
---

<Layout>
	<MetaHead slot="head" title={meta.title} description={meta.description} canonical={canonical} />

	<main class="mx-auto max-w-6xl px-6 py-12 sm:py-14">
		{/* HERO */}
		<section class="relative overflow-hidden">
			<div class="grid items-center gap-10 lg:grid-cols-2">
				<div>
					<p class="text-sm font-semibold tracking-wide text-sky-300">AEC Talent</p>
					<h1 class="mt-4 text-4xl font-semibold tracking-tight text-white sm:text-5xl">
						Hire Individual AEC Specialists — Fast and Flexible
					</h1>
					<p class="mt-4 max-w-prose text-base leading-relaxed text-slate-300 sm:text-lg">
						Dedicated Revit/BIM/drafting specialists embedded into your team. Choose 20h/week or 40h/week and stay
						month-to-month — vetted, timezone-aligned, and ready fast.
					</p>

					<div class="mt-8 flex flex-wrap gap-3">
						<a
							href={bookingUrl}
							{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
							class="inline-flex items-center justify-center rounded bg-sky-600 px-5 py-2.5 text-sm font-semibold text-white transition hover:bg-sky-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300 focus-visible:ring-offset-2 focus-visible:ring-offset-slate-950"
							data-book-call
						>
							Book a 15-Min Call
						</a>
						<a
							href="/solutions/aec-talent/"
							class="inline-flex items-center justify-center rounded-xl border border-slate-800 bg-slate-900/60 px-5 py-2.5 text-sm font-semibold text-slate-100 transition hover:bg-slate-900 focus:outline-none focus-visible:ring-2 focus-visible:ring-slate-400 focus-visible:ring-offset-2 focus-visible:ring-offset-slate-950"
						>
							Back to AEC overview
						</a>
					</div>

					<p class="mt-4 text-xs leading-relaxed text-slate-400">
						Timezone-aligned. Pre-vetted specialists. Month-to-month flexibility. Free replacement guarantee.
					</p>
				</div>

				<div class="relative">
					<div class="rounded-2xl border border-slate-800 bg-gradient-to-br from-slate-900/60 to-slate-950 p-6 shadow-sm">
						<p class="text-xs font-semibold uppercase tracking-wide text-slate-400">Typical outcomes</p>
						<ul class="mt-4 grid gap-3 sm:grid-cols-2">
							<li class="rounded-xl border border-slate-800 bg-slate-900/40 p-4">
								<p class="text-xs font-semibold uppercase tracking-wide text-slate-400">Delivery</p>
								<p class="mt-2 text-sm text-slate-200">More CDs shipped on schedule.</p>
							</li>
							<li class="rounded-xl border border-slate-800 bg-slate-900/40 p-4">
								<p class="text-xs font-semibold uppercase tracking-wide text-slate-400">Consistency</p>
								<p class="mt-2 text-sm text-slate-200">Redlines turned faster with fewer bottlenecks.</p>
							</li>
							<li class="rounded-xl border border-slate-800 bg-slate-900/40 p-4">
								<p class="text-xs font-semibold uppercase tracking-wide text-slate-400">Quality</p>
								<p class="mt-2 text-sm text-slate-200">Work aligned to your BEP + templates.</p>
							</li>
							<li class="rounded-xl border border-slate-800 bg-slate-900/40 p-4">
								<p class="text-xs font-semibold uppercase tracking-wide text-slate-400">Capacity</p>
								<p class="mt-2 text-sm text-slate-200">Peak workloads handled without burnout.</p>
							</li>
						</ul>
					</div>
					<div class="pointer-events-none absolute -right-20 -top-20 h-64 w-64 rounded-full bg-sky-500/10 blur-3xl" />
					<div class="pointer-events-none absolute -bottom-24 -left-24 h-72 w-72 rounded-full bg-indigo-500/10 blur-3xl" />
				</div>
			</div>
		</section>

		{/* FORMATS */}
		<section class="mt-12" aria-labelledby="formats-aec">
			<h2 id="formats-aec" class="text-2xl font-semibold tracking-tight text-white sm:text-3xl">
				Formats
			</h2>
			<div class="mt-6 grid gap-4 md:grid-cols-2">
				<article class="rounded-2xl border border-slate-800 bg-slate-900/40 p-6">
					<h3 class="text-base font-semibold text-slate-100">20 hours/week</h3>
					<p class="mt-3 text-sm leading-relaxed text-slate-300">
						Best for steady overflow, targeted scope, and teams that need consistent support without adding headcount.
					</p>
					<ul class="mt-4 grid gap-2 text-sm text-slate-300">
						<li>Ideal for: ongoing drafting support, redlines, model cleanup</li>
						<li>Cadence: daily overlap for fast iteration</li>
					</ul>
				</article>
				<article class="rounded-2xl border border-slate-800 bg-slate-900/40 p-6">
					<h3 class="text-base font-semibold text-slate-100">40 hours/week</h3>
					<p class="mt-3 text-sm leading-relaxed text-slate-300">
						Best for owning deliverables end-to-end with fewer handoffs and faster throughput.
					</p>
					<ul class="mt-4 grid gap-2 text-sm text-slate-300">
						<li>Ideal for: CD production, BIM coordination support, model builds</li>
						<li>Cadence: embedded like an in-house team member</li>
					</ul>
				</article>
			</div>
		</section>

		{/* MATCHING PROCESS */}
		<section class="mt-12" aria-labelledby="process-aec-individuals">
			<h2 id="process-aec-individuals" class="text-2xl font-semibold tracking-tight text-white sm:text-3xl">
				Matching process
			</h2>
			<ol class="mt-6 grid gap-4 lg:grid-cols-4">
				{[
					{ title: 'Scope + standards', body: 'Roles, tools, file formats, BEP/templates, and QA expectations.' },
					{ title: 'Candidates in 48 hours', body: 'We deliver vetted specialists aligned to your workflow.' },
					{ title: 'Interview (optional)', body: 'Meet top matches or start immediately if you prefer.' },
					{ title: 'Onboard + deliver', body: 'Fast kickoff, iterative redlines, and clear handoffs.' },
				].map((step, idx) => (
					<li class="rounded-2xl border border-slate-800 bg-slate-900/40 p-6">
						<p class="text-xs font-semibold uppercase tracking-wide text-sky-300">Step {idx + 1}</p>
						<p class="mt-2 text-sm font-semibold text-slate-100">{step.title}</p>
						<p class="mt-2 text-sm leading-relaxed text-slate-300">{step.body}</p>
					</li>
				))}
			</ol>
		</section>

		{/* PROOF */}
		<section class="mt-12" aria-labelledby="proof-aec-individuals">
			<h2 id="proof-aec-individuals" class="text-2xl font-semibold tracking-tight text-white sm:text-3xl">
				Proof
			</h2>
			<p class="mt-3 max-w-prose text-sm leading-relaxed text-slate-300 sm:text-base">
				{/* TODO: Replace with testimonials carousel. */}
				Testimonials placeholder (to be filled).
			</p>

			<div class="mt-6 grid gap-4 md:grid-cols-3">
				{[1, 2, 3].map((i) => (
					<figure class="rounded-2xl border border-slate-800 bg-slate-900/40 p-6">
						<blockquote class="text-sm leading-relaxed text-slate-200">“TODO testimonial {i}.”</blockquote>
						<figcaption class="mt-3 text-xs text-slate-400">— TODO, anonymized</figcaption>
					</figure>
				))}
			</div>
		</section>

		{/* FAQ */}
		<section class="mt-12" aria-labelledby="faq-aec-individuals">
			<h2 id="faq-aec-individuals" class="text-2xl font-semibold tracking-tight text-white sm:text-3xl">
				FAQ
			</h2>
			<div class="mt-6 grid gap-3">
				{faqs.map((item) => (
					<details class="rounded-2xl border border-slate-800 bg-slate-900/40 p-5">
						<summary class="cursor-pointer list-none text-sm font-semibold text-slate-100">{item.q}</summary>
						<p class="mt-3 text-sm leading-relaxed text-slate-300">{item.a}</p>
					</details>
				))}
			</div>
		</section>

		{/* FINAL CTA */}
		<section class="mt-14 rounded-2xl border border-slate-800 bg-gradient-to-br from-slate-900/60 to-slate-950 p-6 sm:p-8">
			<div class="flex flex-col items-start justify-between gap-6 md:flex-row md:items-center">
				<div>
					<h2 class="text-2xl font-semibold tracking-tight text-white sm:text-3xl">Ready to add AEC capacity?</h2>
					<p class="mt-2 max-w-prose text-sm leading-relaxed text-slate-300 sm:text-base">
						Book a call to discuss your standards and timeline — we’ll send vetted specialist options fast.
					</p>
				</div>
				<div class="flex flex-wrap gap-3">
					<a
						href={bookingUrl}
						{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
						class="inline-flex items-center justify-center rounded bg-sky-600 px-5 py-2.5 text-sm font-semibold text-white transition hover:bg-sky-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300 focus-visible:ring-offset-2 focus-visible:ring-offset-slate-950"
						data-book-call
					>
						Book a 15-Min Call
					</a>
					<a
						href="/solutions/aec-talent/teams/"
						class="inline-flex items-center justify-center rounded-xl border border-slate-800 bg-slate-900/60 px-5 py-2.5 text-sm font-semibold text-slate-100 transition hover:bg-slate-900 focus:outline-none focus-visible:ring-2 focus-visible:ring-slate-400 focus-visible:ring-offset-2 focus-visible:ring-offset-slate-950"
					>
						Need a team instead?
					</a>
				</div>
			</div>
		</section>
	</main>

	<div class="mx-auto max-w-6xl px-6">
		<ContactSection subject={`${brand} — new inquiry (AEC individuals)`} />
	</div>

	<Footer />
</Layout>

