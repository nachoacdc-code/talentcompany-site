---
import Layout from '../../layouts/Layout.astro';
import MetaHead from '../../components/MetaHead.astro';
import Hero from '../../components/Hero.astro';
import Footer from '../../components/Footer.astro';

const meta = {
	title: 'Managed Design Subscriptions & Remote Designers | Flexible Design Teams',
	description:
		'Access senior remote designers through flexible staff augmentation or PM-managed design subscriptions. Ideal for marketing, product, and branding teams.',
};

const baseUrl = Astro.site ?? 'https://talentcompany-site.vercel.app';
const canonical = new URL('/services/design', baseUrl).toString();

const serviceJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'Service',
	name: 'Managed Design Teams & Staff Augmentation',
	description: meta.description,
	provider: {
		'@type': 'Organization',
		name: 'TalentCompany',
		url: baseUrl,
	},
};

const faqs = [
	{
		q: 'Can we hire designers full-time or part-time?',
		a: 'Yes. We support full-time, part-time, or hourly staff augmentation based on your needs.',
	},
	{
		q: 'What is a managed design subscription?',
		a: 'A PM-led design team delivered as predictable monthly capacity using a clear intake and delivery workflow.',
	},
	{
		q: 'How quickly can we start?',
		a: 'Once we confirm scope and availability, onboarding is designed to be fast so you can start shipping quickly.',
	},
];

const faqJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'FAQPage',
	mainEntity: faqs.map((f) => ({
		'@type': 'Question',
		name: f.q,
		acceptedAnswer: { '@type': 'Answer', text: f.a },
	})),
};
---

<Layout>
	<MetaHead
		slot="head"
		title={meta.title}
		description={meta.description}
		canonical={canonical}
		jsonLd={[serviceJsonLd, faqJsonLd]}
	/>

	<Hero
		kicker="Services"
		title="Design Capacity, Without the Overhead"
		subtitle="Senior remote designers â€” staffed directly into your team or delivered through managed design subscriptions."
		primaryCta={{ label: 'Book a Design Call', href: '/#contact' }}
		secondaryCta={{ label: 'Back home', href: '/' }}
	/>

	<main class="mx-auto max-w-6xl px-6 py-12 sm:py-14">
		<section class="grid gap-4 lg:grid-cols-2">
			<article class="rounded-2xl border border-slate-800 bg-slate-900/40 p-6">
				<h2 class="text-xl font-semibold text-white">Design Staff Augmentation</h2>
				<p class="mt-3 text-sm leading-relaxed text-slate-300">
					You lead. We supply the talent. Full-time, part-time or hourly designers integrated into your workflows.
				</p>
			</article>

			<article class="rounded-2xl border border-slate-800 bg-slate-900/40 p-6">
				<h2 class="text-xl font-semibold text-white">Managed Design Subscriptions</h2>
				<p class="mt-3 text-sm leading-relaxed text-slate-300">
					We manage the workflow. PM-led teams delivered as credit packs â€” predictable monthly billing and
					studio-grade output.
				</p>
			</article>
		</section>

		<section class="mt-12">
			<h3 class="text-lg font-semibold text-white">Example Managed Subscription Plans</h3>
			<div class="mt-6 grid gap-4 md:grid-cols-3">
				<div class="rounded-2xl border border-slate-800 bg-slate-900/40 p-5">
					<h4 class="font-semibold text-slate-100">Starter</h4>
					<p class="mt-2 text-sm text-slate-300">~40 credits / month â€” light ongoing design needs</p>
				</div>
				<div class="rounded-2xl border border-slate-800 bg-slate-900/40 p-5">
					<h4 class="font-semibold text-slate-100">Growth</h4>
					<p class="mt-2 text-sm text-slate-300">~100â€“120 credits / month â€” consistent design output</p>
				</div>
				<div class="rounded-2xl border border-slate-800 bg-slate-900/40 p-5">
					<h4 class="font-semibold text-slate-100">Agency</h4>
					<p class="mt-2 text-sm text-slate-300">~160â€“200 credits / month â€” continuous design support</p>
				</div>
			</div>
		</section>

		<section class="mt-12">
			<h3 class="text-lg font-semibold text-white">Design Capabilities</h3>
			<ul class="mt-4 grid gap-2 text-sm text-slate-300 sm:grid-cols-2">
				<li class="rounded-xl border border-slate-800 bg-slate-900/40 px-4 py-3">
					Graphic &amp; marketing design
				</li>
				<li class="rounded-xl border border-slate-800 bg-slate-900/40 px-4 py-3">
					Pitch decks &amp; presentations
				</li>
				<li class="rounded-xl border border-slate-800 bg-slate-900/40 px-4 py-3">
					Brand systems &amp; visual identity
				</li>
				<li class="rounded-xl border border-slate-800 bg-slate-900/40 px-4 py-3">
					Web &amp; product design support
				</li>
			</ul>
		</section>

		<section class="mt-12" aria-labelledby="faq-design">
			<h3 id="faq-design" class="text-lg font-semibold text-white">
				FAQ
			</h3>
			<div class="mt-4 grid gap-3">
				{faqs.map((item) => (
					<details class="rounded-2xl border border-slate-800 bg-slate-900/40 p-5">
						<summary class="cursor-pointer list-none text-sm font-semibold text-slate-100">
							{item.q}
						</summary>
						<p class="mt-3 text-sm leading-relaxed text-slate-300">{item.a}</p>
					</details>
				))}
			</div>
		</section>

		<section class="mt-14 text-center">
			<a
				href="/#contact"
				class="inline-flex items-center justify-center rounded-xl bg-sky-500 px-6 py-3 text-sm font-semibold text-slate-950 shadow-sm transition hover:bg-sky-400 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300 focus-visible:ring-offset-2 focus-visible:ring-offset-slate-950"
			>
				Book a Design Call
			</a>
		</section>
	</main>

	<Footer />
</Layout>

